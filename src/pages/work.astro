---
import { getCollection } from "astro:content";
import App from "../layouts/app.layout.astro";
import works from "../data/work.json";
---

<App title="WORK">
  <h1 class="font-[Syne] font-bold text-4xl md:text-6xl text-primary">
    WORK<span class="text-foreground">.</span>
  </h1>
  <div class="mt-6 md:mt-20 flex flex-col items-start gap-3 md:gap-6">
    {
      works.map((work) => (
        <div class="w-full flex flex-col gap-4">
          <div class="w-full flex items-center justify-between">
            <a
              href={work.url}
              target="_blank"
              class="flex items-end gap-2 border-b border-primary"
            >
              <h3 class="font-[Satoshi-bold] text-2xl md:text-4xl">
                {work.organization}
              </h3>
              <svg
                width="30"
                height="30"
                viewBox="0 0 15 15"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M3.64645 11.3536C3.45118 11.1583 3.45118 10.8417 3.64645 10.6465L10.2929 4L6 4C5.72386 4 5.5 3.77614 5.5 3.5C5.5 3.22386 5.72386 3 6 3L11.5 3C11.6326 3 11.7598 3.05268 11.8536 3.14645C11.9473 3.24022 12 3.36739 12 3.5L12 9.00001C12 9.27615 11.7761 9.50001 11.5 9.50001C11.2239 9.50001 11 9.27615 11 9.00001V4.70711L4.35355 11.3536C4.15829 11.5488 3.84171 11.5488 3.64645 11.3536Z"
                  fill="currentColor"
                  fill-rule="evenodd"
                  clip-rule="evenodd"
                />
              </svg>
            </a>
            <small class="font-[Satoshi-Light] text-sm text-muted-foreground">
              {work.years}
            </small>
          </div>
          <ul class="flex flex-col my-5 gap-5 ml-3 md:ml-6">
            {work.roles.map((role) => (
              <li class="flex flex-col list-disc">
                <div class="flex items-center gap-2">
                  <svg
                    width="15"
                    height="15"
                    viewBox="0 0 15 15"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                    class="fill-primary stroke-primary w-3 h-3"
                  >
                    <path
                      d="M0.877075 7.49988C0.877075 3.84219 3.84222 0.877045 7.49991 0.877045C11.1576 0.877045 14.1227 3.84219 14.1227 7.49988C14.1227 11.1575 11.1576 14.1227 7.49991 14.1227C3.84222 14.1227 0.877075 11.1575 0.877075 7.49988ZM7.49991 1.82704C4.36689 1.82704 1.82708 4.36686 1.82708 7.49988C1.82708 10.6329 4.36689 13.1727 7.49991 13.1727C10.6329 13.1727 13.1727 10.6329 13.1727 7.49988C13.1727 4.36686 10.6329 1.82704 7.49991 1.82704Z"
                      fill-rule="evenodd"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <h4 class="font-[Syne] font-medium text-lg md:text-xl">
                    {role.role}
                  </h4>
                </div>
                <p class="ml-6 text-md text-muted-foreground font-[Satoshi-Regular] mt-2">
                  {role.description}
                </p>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</App>
